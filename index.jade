          script(type='text/javascript').
            d3.json('data/hosts.json',
              function(err, rows) {
                if (!!err) return;
                var row = d3.select('#fair-history table tbody')
                  .selectAll('tr')
                  .data(rows)
                  .enter()
                  .append('tr')
                  .each(function(d) {
                    if (d.winner && !(d.winner.name instanceof Array)) {
                      d.winner.name = [d.winner.name];
                    }
                  });
                row.append('td').text(function(d) {
                  return d.year;
                });
                var host = row.append('td');
                host.append('a')
                  .text(function(d) {
                    return d.host.name;
                  })
                  .attr('href', function(d) {
                    return d.host.url;
                  })
                  .attr('target', '_blank');
                host.append('span')
                  .text(function(d) {
                    return ' (' + d.host.location + ')';
                  });
                row.append('td').each(function(d) {
                  var node = d3.select(this);
                  if (!d.winner) {
                    node.append('span').text('TBA');
                    return;
                  }
                  d.winner.name.forEach(function(name, i) {
                    if (i > 0) {
                      node.append('br');
                    }
                    var base_url = 'http://apps.ysf-fsj.ca/virtualcwsf/projectdetails.php?id=';
                    node.append('a')
                      .text(name)
                      .attr('title', d.winner.project.name)
                      .attr('href', base_url + d.winner.project.id)
                      .attr('target', '_blank');
                    node.append('span')
                      .text(' (' + d.winner.province + ')');
                  });
                });
                row.append('td').text(function(d) {
                  if (typeof(d.total_prizes) === 'undefined') {
                    return 'TBA';
                  }
                  return '$' + intformat(d.total_prizes);
                });
              });
    //- Ranks
    section#ranks
      .pure-g-r
        #largest-personal-winnings.pure-u-1-3
          h3 Largest Personal Winnings
          table.pure-table.pure-table-horizontal
            tbody
          script(type='text/javascript').
            d3.json('data/personal-winnings.json',
              function(err, rows) {
                if (!!err) return;
                var row = d3.select('#largest-personal-winnings table tbody')
                  .selectAll('tr')
                  .data(rows)
                  .enter()
                  .append('tr')
                  .each(function(d, i) {
                    if (!(d.name instanceof Array)) {
                      d.name = [d.name];
                    }
                    var previous = d3.select(this.previousSibling);
                    var rank;
                    if (previous.empty()) {
                      rank = 1;
                    } else {
                      var p = previous.data()[0];
                      rank = (p.amount == d.amount) ? p.rank : p.rank + 1;
                    }
                    d.rank = rank;
                  });
                row.append('td').text(function(d) {
                  return d.rank + '. ';
                });
                row.append('td').selectAll('a').data(function(d) {
                  return d.name;
                }).enter().append('span').each(function(d, i) {
                  var node = d3.select(this);
                  if (i > 0) {
                    node.append('br');
                  }
                  node.append('a')
                    .attr('href', function(d) {
                      return 'http://apps.ysf-fsj.ca/virtualcwsf/browse.php?name='
                          + d;
                    })
                    .attr('target', '_blank')
                    .text(function(d) {
                      return d;
                    });
                });
                row.append('td').text(function(d) {
                  return '$' + intformat(d.amount);
                });
                row.append('td').text(function(d) {
                  var text = '(' + d.years + ' year';
                  if (d.years != 1) {
                    text += 's';
                  }
                  return text + ')';
                });
              });
        #provincial-averages.pure-u-1-3
          h3 Provincial Averages
            select
              option(value=2014, selected) 2014
              option(value=2013) 2013
          table.pure-table.pure-table-horizontal
            tbody
          script(type='text/javascript').
            d3.json('data/provincial-averages.json',
              function(err, rows) {
                if (!!err) return;
                // Sort and calculate rank
                for (var key in rows) {
                  var current = rows[key];
                  current.sort(function(a, b) {
                    var cmp = d3.descending(a.average, b.average);
                    if (cmp != 0) {
                      return cmp;
                    }
                    return d3.descending(a.province.name, b.province.name);
                  });
                  for (var i = 0; i < current.length; i++) {
                    var rank;
                    if (i == 0) {
                      rank = 1;
                    } else {
                      rank = current[i - 1].rank;
                      if (current[i].average != current[i - 1].average) {
                        rank++;
                      }
                    }
                    current[i].rank = rank;
                  }
                }
                var select = $('#provincial-averages select');
                var redraw = function(year) {
                  var data = rows[year];
                  var selection = d3.select('#provincial-averages table tbody')
                    .selectAll('tr')
                    .data(data);

                  var funcRank = function(s) {
                    s.text(function(d) {
                      return d.rank + '. ';
                    });
                  };
                  var funcProvince = function(s) {
                    s.select('a').text(function(d) {
                      return d.province.name;
                    })
                    .attr('href', function(d) {
                      var base = 'http://apps.ysf-fsj.ca/virtualcwsf/browse.php?year=';
                      return base + year + '&province=' + d.province.id;
                    })
                  };
                  var funcAverage = function(s) {
                    s.text(function(d) {
                      return '$' + intformat(d.average);
                    });
                  };

                  selection.select('td:nth-child(1)').call(funcRank);
                  selection.select('td:nth-child(2)').call(funcProvince);
                  selection.select('td:nth-child(3)').call(funcAverage);

                  var row = selection.enter()
                    .append('tr');
                  row.append('td').call(funcRank);
                  var province = row.append('td');
                  province.append('a');
                  province.call(funcProvince);
                  row.append('td').call(funcAverage);
                };
                redraw(select.val());
                select.change(function() {
                  redraw($(this).val());
                });
              }
            );
        #provincial-medals.pure-u-1-3
          h3 Provincial Medals
            select
              option(value=2014, selected) 2014
              option(value=2013) 2013
          table.pure-table.pure-table-horizontal
            tbody
          script(type='text/javascript').
            d3.json('data/provincial-medals.json',
              function(err, rows) {
                if (!!err) return;
                // Sort and calculate rank
                for (var key in rows) {
                  var current = rows[key];
                  current.sort(function(a, b) {
                    for (var i = 0; i < a.medals.length; i++) {
                      var p = d3.descending(a.medals[i].count, b.medals[i].count);
                      if (p != 0) {
                        return p;
                      }
                    }
                    return d3.descending(a.province.name, b.province.name);
                  });
                  for (var i = 0; i < current.length; i++) {
                    var rank;
                    if (i == 0) {
                      rank = 1;
                    } else {
                      var m = 0;
                      rank = current[i - 1].rank;
                      for (var j = 0; j < current[i].medals.length; j++) {
                        if (current[i].medals[j].count == current[i - 1].medals[j].count) {
                          m++;
                        }
                      }
                      if (m != current[i].medals.length) {
                        rank++;
                      }
                    }
                    current[i].rank = rank;
                  }
                }
                var select = $('#provincial-medals select');

                var redraw = function(year) {
                  var selection = d3.select('#provincial-medals table tbody')
                    .selectAll('tr')
                    .data(rows[year]);

                  var funcRank = function(s) {
                    s.text(function(d) {
                      return d.rank + '. ';
                    });
                  };
                  var funcProvince = function(s) {
                    s.select('a')
                      .text(function(d) {
                        return d.province.name;
                      })
                      .attr('href', function(d) {
                        var base = 'http://apps.ysf-fsj.ca/virtualcwsf/browse.php?year=';
                        return base + year + '&province=' + d.province.id;
                      })
                      .attr('target', '_blank');
                  };
                  var funcMedals = function(s) {
                    s.each(function(d) {
                      if (d.count > 0) {
                        var node = d3.select(this);
                        node.attr('title', function() {
                          return d.type.substring(0, 1).toLocaleUpperCase()
                              + d.type.substring(1);
                        });
                        node.text(d.count + ' ');
                        node.append('span').attr('class', 'medal ' + d.type);
                      }
                    });
                  };

                  selection.select('td:nth-child(1)').call(funcRank);
                  selection.select('td:nth-child(2)').call(funcProvince);
                  selection.selectAll('td.medal').data(function(d) {
                    return d.medals;
                  }).call(funcMedals);

                  var row = selection.enter()
                    .append('tr');
                  row.append('td').call(funcRank);
                  var province = row.append('td');
                  province.append('a');
                  province.call(funcProvince);
                  var medals = row.selectAll('td.medal')
                    .data(function(d) {
                      return d.medals;
                    });
                  medals.enter()
                    .append('td')
                    .attr('class', 'medal');
                  medals.call(funcMedals);
                };
                redraw(select.val());
                select.change(function() {
                  redraw($(this).val());
                });
              }
            );
