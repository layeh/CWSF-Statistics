    script(type='text/javascript').
      function intformat(value) {
        var str = '';
        var val = value.toString();
        var len = val.length;
        for (var i = 0; i < len; i++) {
          var j = len - i - 1;
          var r = j % 3;
          if (i > 0 && r == 2) {
            str += ' ';
          }
          str += val[i];
        }
        return str;
      }
